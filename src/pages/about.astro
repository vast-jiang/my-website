---
import BaseLayout from "../layouts/BaseLayout.astro";
import TerminalHeader from "../components/layout/TerminalHeader.astro";
import TerminalFooter from "../components/layout/TerminalFooter.astro";
import Hologram from "../components/dashboard/Hologram.astro";
import { SITE_CONFIG } from "../config/site-config";
---

<BaseLayout title="用户手册">
  <TerminalHeader />

  <main
    class="min-h-[60vh] max-w-6xl mx-auto flex flex-col lg:flex-row gap-8 px-4"
  >
    <!-- 左侧：3D 全息投影 -->
    <!-- 显式指定宽度 w-full lg:w-1/3 -->
    <aside class="w-full lg:w-1/3 flex flex-col gap-4">
      <div
        class="mb-2 border-b border-dos-dim pb-1 flex justify-between items-end"
      >
        <h3 class="text-lg font-bold text-dos-primary">ARTIFACT_01</h3>
        <span class="text-xs text-dos-dim">OBJ_VIEWER</span>
      </div>

      <!-- 3D 组件 -->
      <Hologram />

      <!-- 补充信息 -->
      <div class="glass-panel p-4 text-xs font-mono text-dos-dim space-y-2">
        <p>> MODEL: FOURIER_KNOT_V3</p>
        <p>> RENDERER: THREE.JS_WEBGL</p>
        <p>> STATUS: ROTATING...</p>
      </div>
    </aside>

    <!-- 右侧：文字介绍 -->
    <div class="flex-1">
      <div
        class="mb-8 border-b-2 border-dos-primary pb-2 flex justify-between items-end"
      >
        <h1 class="text-3xl font-bold">MAN_PAGE: USER_GUIDE</h1>
        <span class="text-xs text-dos-dim">SECTION 1</span>
      </div>

      <div class="glass-panel p-8 space-y-6 font-mono text-dos-primary/90">
        <section>
          <h2
            class="text-xl font-bold text-white mb-2 uppercase border-l-4 border-dos-dim pl-3"
          >
            1. NAME
          </h2>
          <p class="pl-4 text-lg">{SITE_CONFIG.author.name}</p>
          <p class="pl-4 text-sm text-dos-dim">
            Full Stack Developer & Hardware Engineer
          </p>
        </section>

        <section>
          <h2
            class="text-xl font-bold text-white mb-2 uppercase border-l-4 border-dos-dim pl-3"
          >
            2. SYNOPSIS
          </h2>
          <div
            class="pl-4 bg-black border border-dos-dim/50 p-4 rounded text-sm text-dos-dim"
          >
            <code
              >operator --location="{SITE_CONFIG.author.location}"
              --role="ADMIN"</code
            >
          </div>
        </section>

        <section>
          <h2
            class="text-xl font-bold text-white mb-2 uppercase border-l-4 border-dos-dim pl-3"
          >
            3. DESCRIPTION
          </h2>
          <p class="pl-4 leading-relaxed">
            Initialization complete. Operator currently located in region {
              SITE_CONFIG.author.location
            }. Specializes in web technologies (Astro, React, Tailwind) and
            embedded systems hardware design.
            <br /><br />
            This system interface is designed to reflect a retro-futuristic aesthetic
            while maintaining modern performance standards.
          </p>
        </section>

        <section>
          <h2
            class="text-xl font-bold text-white mb-2 uppercase border-l-4 border-dos-dim pl-3"
          >
            4. CONTACT
          </h2>
          <ul class="pl-4 list-none space-y-2 text-sm">
            <li class="flex items-center gap-2">
              <span class="text-dos-dim">> EMAIL:</span>
              <span class="select-all">16909925690@qq.com</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-dos-dim">> GITHUB:</span>
              <a
                href="https://github.com/vast-jiang"
                target="_blank"
                class="underline hover:text-white">github.com/vast-jiang</a
              >
            </li>
          </ul>
        </section>
      </div>
    </div>
  </main>

  <TerminalFooter />
</BaseLayout>
